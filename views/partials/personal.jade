div(ng-include="'partials/navbar'")
.container
  .row
    .col-sm-3.col-md-2.sidebar
    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
      h1.page-header Your projects
      .table-responsive
        table.table.table-striped
          thead
            tr
              th Reference
              th Title
              th Last Update
          tbody
            tr(ng-repeat='project in projects')
              td
                a(href="/project/{{project._id}}") {{ project.ref }}
              td {{ project.title }}
              td {{ project.date.updated }}